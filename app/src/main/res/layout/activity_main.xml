<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E3F2FD"
    android:padding="25dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Cabecera"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/borderendondo"
        android:elevation="5dp"
        android:fontFamily="sans-serif-smallcaps"
        android:gravity="center"
        android:text="FlashFix"
        android:textFontWeight="900"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/Imagencita"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:adjustViewBounds="true"
        android:src="@drawable/logoflashfix"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Cabecera" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="290dp"

        android:layout_marginTop="18dp"
        android:background="@drawable/borderendondo"
        android:elevation="2dp"
        app:layout_constraintTop_toBottomOf="@+id/Imagencita"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/crearTaller"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/bordebototn"
                android:elevation="5dp"
                android:fontFamily="serif-monospace"
                android:text="Crear Taller"
                android:textColor="@color/black"
                android:textFontWeight="900"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/listarTalleres"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/bordeboton2"
                android:elevation="5dp"
                android:fontFamily="serif-monospace"
                android:text="Listar Talleres"
                android:textColor="@color/black"
                android:textFontWeight="900"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/Añadircliente"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/bordeboton3"
                android:elevation="5dp"
                android:fontFamily="serif-monospace"
                android:text="Añadir Cliente"
                android:textColor="@color/black"
                android:textFontWeight="900"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/agendaTalleres"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/bordeboton4"
                android:elevation="5dp"
                android:fontFamily="serif-monospace"
                android:text="Agenda de Talleres"
                android:textColor="@color/black"
                android:textFontWeight="900"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/bordeboton2"
                android:elevation="5dp"
                android:fontFamily="serif-monospace"
                android:text="Agenda de Talleres"
                android:textColor="@color/black"
                android:textFontWeight="900"
                android:textSize="20dp" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                android:background="@drawable/bordeboton2"
                android:elevation="5dp"
                android:fontFamily="serif-monospace"
                android:text="Agenda de Talleres"
                android:textColor="@color/black"
                android:textFontWeight="900"
                android:textSize="20dp" />

        </LinearLayout>


    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>