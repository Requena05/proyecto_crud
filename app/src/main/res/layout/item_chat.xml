<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#E6EEF4"
    android:elevation="4dp"
    android:layout_margin="20dp">
    <ImageView
        android:id="@+id/imagen_emisor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="20dp"
        android:src="@drawable/logoflashfix"
        android:adjustViewBounds="true"
        android:padding="4dp"
        />
    <TextView
        android:id="@+id/nombre_emisor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imagen_emisor"
        app:layout_constraintTop_toTopOf="@id/imagen_emisor"
        android:layout_marginTop="10dp"
        android:text="Nombre:"
        android:fontFamily="sans-serif-black"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/tipo_emisor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/imagen_emisor"
        app:layout_constraintTop_toBottomOf="@id/nombre_emisor"
        android:layout_marginStart="10dp"
        android:text="Matricula o
 \n ciudad taller"
        android:fontFamily="sans-serif-black"
        android:textSize="16sp"
        />
    <ImageView
        android:id="@+id/contenido"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintEnd_toStartOf="@id/opciones"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"
        android:adjustViewBounds="true"
        android:padding="4dp"
        android:src="@drawable/comentario"
        />

    <ImageView
        android:id="@+id/opciones"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/trespunto"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:adjustViewBounds="true"
        />

</androidx.constraintlayout.widget.ConstraintLayout>